  <context-param>
    <param-name>serverIP</param-name>
    <param-value>localhost</param-value>
  </context-param>
  <context-param>
    <param-name>serverPort</param-name>
    <param-value>4245</param-value>
  </context-param>
  
  <servlet>
    <servlet-name>jersey-servlet-AgentsServer</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>jcatascopia.api.agent</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-servlet-AgentsServer</servlet-name>
    <url-pattern>/restAPI/agents/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>jersey-servlet-MetricServer</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>jcatascopia.api.metrics</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-servlet-MetricServer</servlet-name>
    <url-pattern>/restAPI/metrics/*</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>jersey-servlet-SubscriptionsServer</servlet-name>
    <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
    <init-param>
      <param-name>com.sun.jersey.config.property.packages</param-name>
      <param-value>jcatascopia.api.subscriptions</param-value>
    </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>jersey-servlet-SubscriptionsServer</servlet-name>
    <url-pattern>/restAPI/subscriptions/*</url-pattern>
  </servlet-mapping>  
</web-app>
